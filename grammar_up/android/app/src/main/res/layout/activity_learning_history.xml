<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray50">

    <!-- Header with gradient background -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_submit_background"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:padding="8dp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:contentDescription="Back"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learning_history_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learning_history_subtitle"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:alpha="0.9"/>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <!-- Exercises Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/badge_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tvExerciseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_exercises"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"/>
            </LinearLayout>

            <!-- Lessons Stats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/badge_background"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvLessonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_lessons"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tab Buttons -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tabExercises"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_exercises"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_submit_background"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tabLessons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_lessons"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray600"
            android:background="@drawable/edittext_background"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="48dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š"
            android:textSize="48sp"/>

        <TextView
            android:id="@+id/tvEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_history_yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gray900"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvEmptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_exercises_hint"
            android:textSize="14sp"
            android:textColor="@color/gray500"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

    <!-- History list -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"/>

    </ScrollView>

</LinearLayout>
